---
import '../styles/global.css';
import LeftHeader from '../components/LeftHeader.astro';

const { title } = Astro.props;
---
<html lang="en">
  <head>
    <script is:inline>
      try {
        var hasKey = sessionStorage.getItem('openSubSidebarKey');
        var isPinned = localStorage.getItem('subSidebarPinned') === '1';
        var isDesktop = window.matchMedia && window.matchMedia('(min-width: 901px)').matches;

        if (isDesktop) {
          if (isPinned) {
            document.documentElement.classList.add('sub-pinned');
            // Ensure it shows immediately even before TS rehydrates
            document.documentElement.classList.add('sub-open');
          } else if (hasKey) {
            document.documentElement.classList.add('sub-open');
          }
        }
      } catch {}
    </script>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body>
    <div class="layout-shell">
      <LeftHeader />
      <main class="layout-content">
        <div class="content">
          <slot />
        </div>
      </main>
    </div>
    <script>
        import '../scripts/navDrawer.ts';
      </script>
  </body>
</html>
