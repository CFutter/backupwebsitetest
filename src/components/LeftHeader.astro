---
const links = [
  { href: '/', label: 'Home' },
  { href: '/articles', label: 'Articles' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const { pathname } = Astro.url;
---

<aside class="site-sidebar" data-component="site-sidebar">

  <!-- Mobile top bar: brand + hamburger -->
  <div class="site-bar">
    <button
      class="site-menu-toggle"
      type="button"
      aria-label="Open menu"
      aria-controls="site-drawer"
      aria-expanded="false"
    >
      <!-- Minimal icons; swapped via [aria-expanded] -->
      <svg class="icon-burger" aria-hidden="true">
        <path d="M3 6h18M3 12h18M3 18h18" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
      </svg>
      
      <svg class="icon-arrow-close" aria-hidden="true" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round">
        <!-- Arrow shaft -->
        <line x1="4" y1="12" x2="16" y2="12" />
        <!-- Arrowhead -->
        <polyline points="10 8, 4 12, 10 16" />
        <!-- Vertical bar (I) -->
        <line x1="16" y1="8" x2="16" y2="16" />
      </svg>

      
    </button>
  </div>

  <!-- Drawer: static column on desktop; off-canvas on mobile -->
  <div class="site-drawer" id="site-drawer" data-open="false">
    <nav aria-label="Main">
      <ul class="site-nav">
        {links.map((l) => (
          <li>
            <a
              href={l.href}
              aria-current={pathname === l.href ? 'page' : undefined}
            >{l.label}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>

  <!-- Backdrop for the mobile drawer -->
  <div class="site-backdrop" hidden></div>
</aside>
