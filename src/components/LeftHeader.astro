const primaryLinks = links.filter(l => l.section === 'primary');
const secondaryLinks = links.filter(l => l.section === 'secondary');

const { pathname } = Astro.url;

// Convert file paths to URL paths
function filePathToUrl(filePath: string): string {
  return filePath
    .replace('/src/pages', '')
    .replace('.astro', '')
    .replace('/index', '');
}

// Dynamically import all subpages grouped by folder
